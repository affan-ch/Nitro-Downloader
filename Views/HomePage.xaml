<Page
    x:Class="Nitro_Downloader.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel>
        <TextBox x:Name="Link_TextBox" AutomationProperties.Name="multi-line TextBox"
    TextWrapping="Wrap" AcceptsReturn="True" IsSpellCheckEnabled="True"
     MinWidth="400" />
        <Button x:Name="DownloadButton" Click="DownloadButton_Click" Style="{StaticResource AccentButtonStyle}" Content="Download" Margin="20 20 20 20" HorizontalAlignment="Center"/>
    </StackPanel>
</Page>
